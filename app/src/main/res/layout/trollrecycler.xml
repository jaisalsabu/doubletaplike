<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <androidx.cardview.widget.CardView
        android:layout_width="350dp"
        android:layout_height="70dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="6dp"
        app:cardBackgroundColor="#F0F8FF"
        app:cardCornerRadius="20dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="23dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/propic"
            app:civ_border_color="#FF000000"
            app:civ_border_width="2dp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="70dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="97dp"
            android:text=" Bimal John"
            android:textColor="#000000"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="133dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="70dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="168dp"
            android:text="    21 Hours"
            android:textColor="	#787878" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="386dp"
        android:layout_height="422dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="12dp"
        android:layout_marginTop="100dp"
        app:cardCornerRadius="7dp"
        app:cardBackgroundColor="#F0F8FF"
        android:layout_marginEnd="13dp" >

        <TextView
            android:id="@+id/textView3"
            android:layout_width="354dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="7dp"
            android:layout_marginRight="10dp"
            android:text="Once upon a time , there was a kallan and a police .................................................................................................................................................................................." />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="336dp"
            android:layout_height="199dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="90dp"
            android:layout_marginRight="20dp"
            app:srcCompat="@drawable/mockup" />

        <com.like.LikeButton
            android:id="@+id/star_button"
            android:layout_width="80dp"
            android:layout_height="72dp"
            android:layout_marginTop="330dp"
            android:layout_marginLeft="20dp"
            app:icon_size="15dp"
            app:circle_start_color="#F30F76"
            app:circle_end_color="#A80000"
            app:dots_primary_color="#F40670"
            app:dots_secondary_color="#D50000"
            app:anim_scale_factor="4.5"
            app:icon_type="heart"
            app:liked="true" />


    </androidx.cardview.widget.CardView>

</RelativeLayout>

